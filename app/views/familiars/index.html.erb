<p id="notice"><%= notice %></p>

<h1>Familiars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tooltip</th>
      <th>Description</th>
      <th>Img url</th>
      <th>Element</th>
      <th>Origin</th>
      <th>Speed</th>
      <th>Memory</th>
      <th>Disicpline</th>
      <th>Distracted by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @familiars.each do |familiar| %>
      <tr>
        <td><%= familiar.name %></td>
        <td><%= familiar.tooltip %></td>
        <td><%= familiar.description %></td>
        <td><%= familiar.img_url %></td>
        <td><%= familiar.element %></td>
        <td><%= familiar.origin %></td>
        <td><%= familiar.speed %></td>
        <td><%= familiar.memory %></td>
        <td><%= familiar.disicpline %></td>
        <td><%= familiar.distracted_by %></td>
        <td><%= link_to 'Show', familiar %></td>
        <td><%= link_to 'Edit', edit_familiar_path(familiar) %></td>
        <td><%= link_to 'Destroy', familiar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Familiar', new_familiar_path %>
