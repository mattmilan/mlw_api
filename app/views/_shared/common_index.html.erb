<p id="notice"><%= notice %></p>
<h1><%= @models[0].nil? ? "No records found..." : @models[0].class.name  %></h1>
<table class="table">
  <thead>
    <tr>
      <% @headers.each do |index_header| %>
        <th><%= index_header %>
      <% end unless @headers.nil? %>

    </tr>
  </thead>
  <tbody>
    <% @models.each do |model| %>
      <tr>
        <% model.attributes.each do |attr_name, attr_value| %>
          <td>
            <%if attr_name == 'id' %>
              <%= link_to(model, class: 'btn btn-primary') do %>
                <%= attr_value %>
              <% end %>
            <% else %>
              <%= attr_value %>
            <% end %>
          </td>
        <%end%>
      </tr>
      <tr>
        <td style="text-align:right;" colspan=<%= model.attributes.length%>>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>